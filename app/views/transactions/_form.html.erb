<div class="form-group">
  <label class="form-control-label">Description</label>
  <%= form.text_area :description, class: 'form-control' %>
</div>
<div class="form-group">
  <%= form.label(:withdrawls, 'withdrawals') %></td>
  <%= form.number_field(:withdrawls, step: :any, class: 'form-control') %>
</div>
<div class="form-group">
  <%= form.label(:deposits, 'Deposits') %></td>
  <%= form.number_field(:deposits, step: :any, class: 'form-control') %>
</div>
<div class="form-group">
  <%= form.label(:balance, 'Balance') %></td>
  <%= form.number_field(:balance, step: :any, class: 'form-control') %>
</div>
<%= form.hidden_field :user_id, value: current_user.id %>

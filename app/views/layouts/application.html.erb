<!DOCTYPE html>
<html>
  <head>
    <title>BankAccManagement</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <!-- Sidebar Holder -->
      <nav id="sidebar">
        <div class="sidebar-header">
          <h3>Account Management</h3>
        </div>

        <ul class="list-unstyled components">
          <li class="<%= 'active' if request.path == root_path %>">
            <a href="/">Home</a>
          </li>
          <li class="<%= 'active' if request.path == new_transaction_path %>">
            <a href="<%= new_transaction_path %>">Transaction</a>
          </li>
          <li class="<%= 'active' if request.path == transactions_path %>">
            <a href="<%= transactions_path %>">Statement</a>
          </li>
        </ul>

        <ul class="list-unstyled CTAs">
          <li>
            <%= link_to 'Sign Out', destroy_user_session_path, method: 'DELETE' %>
          </li>
        </ul>
      </nav>

      <!-- Page Content Holder -->
      <div id="content">

        <nav class="navbar navbar-default">
          <div class="container-fluid">

            <div class="navbar-header">
              <button type="button" id="sidebarCollapse" class="navbar-btn">
                <span></span>
                <span></span>
                <span></span>
              </button>
            </div>

            <% if notice %>
              <div class="alert alert-success alert-dismissable fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= notice %>
              </div>
            <% elsif alert %>
              <div class="alert alert-warning alert-dismissable fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= alert %>
              </div>
            <% end %>
          </div>
        </nav>
        <%= yield %>
      </div>
    </div>
    <script type="text/javascript">
      $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
          $('#sidebar').toggleClass('active');
          $(this).toggleClass('active');
        });
      });
     </script>
  </body>
</html>
